{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "crypto/**/*.ts",
    "metrics/**/*.ts",
    "rollout/**/*.ts",
    "selfHealing/**/*.ts",
    "harmonic/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
